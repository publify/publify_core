<%= hidden_field_tag 'confirmed', params[:confirmed] %>
<%= hidden_field_tag 'published', params[:published] %>

<div class="card">
  <div class="card-header">
    <div class="clearfix form-inline">
      <button name='<%= "bulkop_#{position}" %>' class="btn btn-success btn-sm mr-sm-2" value='Mark Checked Items as Ham'><%= t('.mark_checked_items_as_ham') %></button>
      <button name='<%= "bulkop_#{position}" %>' class="btn btn-warning btn-sm mr-sm-2" value='Mark Checked Items as Spam'><%= t('.mark_checked_items_as_spam') %></button>
      <button name='<%= "bulkop_#{position}" %>' class="btn btn-danger btn-sm mr-sm-2" value='Delete Checked Items'><%= t('.delete_checked_items') %></button>
      <button name='<%= "bulkop_#{position}" %>' class="btn btn-danger btn-sm float-right ml-auto" value='Delete all spam'><%= t('.delete_all_spam') %></button>
    </div>
  </div>
</div>
