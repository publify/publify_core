<div id="sidebar_<%= sidebar.id %>" class="sidebar_item" data-sortable="sidebar_<%= sidebar.id %>">
  <%= form_tag admin_sidebar_path(sidebar.id), remote: true, method: :put do |f| %>
    <div class="active alert <%= class_for_admin_state(sidebar, sortable_index) %>">
      <%= link_to admin_sidebar_path(sidebar), class: 'close', remote: true, method: :delete, data: { confirm: 'Are you sure?' }, aria_label: "Delete" do %>
        <span aria-hidden="true">&times;</span>
      <% end %>
      <h3 class='light'><%= sidebar.display_name %></h3>
      <div class='widget-content'>
        <p><%= sidebar.description %></p>
      </div>
      <div>
        <% sidebar.class.fields.each do |row| %>
          <%= row.line_html(sidebar) %>
        <% end %>
        <% if sidebar.class.fields.length > 0 %>
          <p>
          <%= submit_tag(t('.update'), class: 'btn btn-sm btn-success') %>
          </p>
        <% end %>
      </div>
    </div>
  <% end %>
</div>
