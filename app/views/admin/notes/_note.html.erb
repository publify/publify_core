<tr>
  <td>
    <%= h(note.body.strip_html.slice(0..140)) %>
    <div class='action'>
      <%= link_to(icon('fas', 'pencil-alt'), {action: 'edit', id: note.id}, {class: 'btn btn-primary btn-xs btn-action'}) %>
      <%= link_to(icon('fas', 'trash'), admin_note_path(note), {class: 'btn btn-danger btn-xs btn-action'}) %>
      <%= link_to(icon('fas', 'link'), note.short_url, {class: 'btn btn-success btn-xs btn-action'}) %>
    </div>
  </td>
  <td>
    <%= author_link(note)%><br>
    <small><%= l(note.published_at) %></small>
  </td>
</tr>
