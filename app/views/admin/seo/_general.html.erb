<fieldset class='mb-4'>
  <legend><%= t('.general_settings') %></legend>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_meta_description"><%= t('.meta_description') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_area(:setting, :meta_description, rows: 3, class: 'form-control') %>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.use_meta_keywords') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <div class='checkbox'>
        <label for="setting_use_meta_keyword">
          <%= check_box(:setting, :use_meta_keyword) %>
          <%= t('.use_meta_keywords') %>
        </label>
      </div>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.meta_keywords') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_area(:setting, :meta_keywords, rows: 3, class: 'form-control') %>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.use_rss_description') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <div class='checkbox'>
        <label for="setting_rss_description">
          <%= check_box(:setting, :rss_description) %>
          <%= t('.use_rss_description') %>
        </label>
      </div>
      <small class='help-block'><%= t('.this_will_display') %></small>
      <%= Article.first&.rss_description %>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_rss_description_text"><%= t('.rss_description_message') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_area(:setting, :rss_description_text, rows: 10, class: 'form-control') %>
      <small class='help-block'><%= t('.explain_rss_description') %></small>
    </div>
  </div>
</fieldset>

<fieldset class='mb-4'>
  <legend><%= t('.indexing') %></legend>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.indexing') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <div class='checkbox'>
        <label for="setting_unindex_tags">
          <%= check_box(:setting, :unindex_tags) %>
          <%= t('.do_not_index_tags') %>
        </label>
        <small class='help-block'><%= t('.explain_tag_index_html') %></small>
      </div>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_robots"><%= t('.robots_txt') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_area(:setting, :robots, rows: 10, class: 'form-control') %>
    </div>
  </div>

  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.dofollow') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <div class='checkbox'>
        <label for="setting_dofollowify">
          <%= check_box(:setting, :dofollowify) %>
          <%= t('.use_dofollow_in_comments') %>
        </label>
        <small class='help-block'><%= t('.explain_moderate_feedback') %></small>
      </div>
    </div>
  </div>
</fieldset>

<fieldset class='mb-4'>
  <legend><%= t('.google') %></legend>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_google_analytics"><%= t('.google_analytics') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_field(:setting, :google_analytics, class: 'form-control') %>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_google_verification"><%= t('.google_webmaster_tools_validation_link') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_field(:setting, :google_verification, class: 'form-control') %>
    </div>
  </div>
  <div class='form-group row'>
    <label class='col-form-label col-md-4 col-lg-3 col-xl-2' for="setting_custom_tracking_field"><%= t('.custom_tracking_code') %></label>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <%= text_area(:setting, :custom_tracking_field, rows: 3, class: 'form-control') %>
      <small class='help-block'><%= t('.explain') %></small>
    </div>
  </div>
</fieldset>
