<div class='alert alert-info'>
  <p><%= t('.explain') %></p>
  <p><%= t('.sample') %></p>
</div>

<div class='mb-4'>
  <div class='form-group row'>
    <legend class='col-form-label col-md-4 col-lg-3 col-xl-2'><%= t('.permalink_format') %></legend>
    <div class='col-md-8 col-lg-6 col-xl-4'>
      <div class='form-check'>
        <%= radio_button(:setting, :permalink_format, '/%year%/%month%/%day%/%title%', class: "form-check-input") %>
        <label for="setting_permalink_format_yearmonthdaytitle" class="form-check-label">
          <%= t('.date_and_title') %>
        </label>
        <small class='help-block'><%= "#{this_blog.base_url}/#{Time.zone.now.strftime('%Y/%m/%d')}/sample-article" %></small>
      </div>
      <div class='form-check'>
        <%= radio_button(:setting, :permalink_format, '/%year%/%month%/%title%', class: "form-check-input") %>
        <label for="setting_permalink_format_yearmonthtitle" class="form-check-label">
          <%= t('.month_and_title') %>
        </label>
        <small class='help-block'><%= "#{this_blog.base_url}/#{Time.zone.now.strftime('%Y/%m')}/sample-article" %></small>
      </div>
      <div class='form-check'>
        <%= radio_button(:setting, :permalink_format, '/%title%', class: "form-check-input") %>
        <label for="setting_permalink_format_title" class="form-check-label">
          <%= t('.title_only') %>
        </label>
        <small class='help-block'><%= "#{this_blog.base_url}/sample-article" %></small>
      </div>
      <div class='form-check'>
        <%= radio_button(:setting, :permalink_format, 'custom', class: "form-check-input") %>
        <label for="setting_permalink_format_custom" class="form-check-label">
          <%= t('.custom') %>
        </label>
        <%= text_field(:setting, :custom_permalink, class: 'form-control') %>
      </div>
    </div>
  </div>
</div>

<h3><%= t('.help_on_permalink_settings') %></h3>
<p class='help-block'><%= t('.you_can_custom_your_url_structure') %></p>
<table class="table table-hover">
  <tr>
    <td><code>%title%</code></td>
    <td><%= t('.your_article_slug_html') %></td>
  </tr>
  <tr>
    <td><code>%year%</code></td>
    <td><%= t('.your_article_year') %></td>
  </tr>
  <tr>
    <td><code>%month%</code></td>
    <td><%= t('.your_article_month') %></td>
  </tr>
  <tr>
    <td><code>%day%</code></td>
    <td><%= t('.your_article_day') %></td>
  </tr>
</table>
